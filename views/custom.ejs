<%-include('partials/head')%>
<a href="/logout"><Button>Logout</Button></a> <button onclick="javascript:history.back()">Go back</button><br>
    <h1>CREATE A CUSTOM BACKLOG</h1>
    <form action="/custom/add" method="post">
        <input type="text" name="itemName" placeholder="Name of the new backlog"> 
        <br>
        <button onclick="return confirm('Are you sure?');">Create</button>
    </form>

    <% let count = 0 %>

    <table>
        <tr>
            
            <% user.customlogs.forEach(log => {%>
                <% if(count % 4 == 0){ %>  <tr></tr> <% } %>
                <th>
                    <a href="/custom/<%=user.id%>/<%= log.id %>"><p><%= log.name %></p></a>
                    <% count++ %>
                </th>
            <%}) %>
            
        </tr>
    </table>
<%-include('partials/footer')%>